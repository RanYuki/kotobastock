<%#= render 'admins/header'  %>

<div class="add-box">
  <div class="add-inner">
      <div class="add-tbl-title">新規単語登録</div>
        <div class="new-term-form">

          <%= form_with(model: term, local: true) do |form| %>
            <% if term.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(term.errors.count, "error") %> prohibited this term from being saved:</h2>

                <ul>
                <% term.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= form.label :word %>
              <%= form.text_field :word %>
            </div>

            <div class="field">
              <%= form.label :kana %>
              <%= form.text_field :kana %>
            </div>

            <div class="actions">
              <%= form.submit %>
            </div>
          <% end %>
        </div>
  </div>
</div>