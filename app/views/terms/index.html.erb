<div class="add-box">
  <div class="add-inner">
      <div class="add-tbl-title">単語一覧</div>
        <div class="new-term-form">
          <p id="notice"><%= notice %></p>

          <table>
            <thead>
              <tr>
                <th>Word</th>
                <th>Kana</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @terms.each do |term| %>
                <tr>
                  <td><%= term.word %></td>
                  <td><%= term.kana %></td>
                  <td><%= link_to 'Show', term %></td>
                  <td><%= link_to 'Edit', edit_admins_term_path(term) %></td>
                  <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Term', new_term_path %>
        </div>
  </div>
</div>
